                        <a href="#" class="btn btn-primary">Go to Weekly Mission</a>
                    </div>
                </div>
            </div>
        </div>





    </div>

    <!-- Main content section in the middle of the screen end -->


    <!-- Right corner content section start -->

    <div class="sticky-top col-2 h-50 text-center ms-1">
        {{#if displayLink}}
        <div class="accordion" id="accordionPanelsStayOpenExample">
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button border-1" type="button" data-bs-toggle="collapse"
                        data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="true"
                        aria-controls="panelsStayOpen-collapseOne">
                        My Collections
                    </button>
                </h2>
                {{#each users}}
                <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show">
                    <div class="accordion-body">
                        <ul>
                            {{#each this.collection}} <li><strong>{{ title }}</strong></li> {{/each}}
                        </ul>
                    </div>
                </div>
                {{/each}}


            </div>
            <br>
            <div class="accordion" id="accordionPanelsStayOpenExample">
